{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":disableDependencyDashboard",
    ":automergeMinor",
    ":automergePatch",
    ":rebaseStalePrs"
  ],
  "ignorePresets": [
    "group:monorepos"
  ],
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "enabledManagers": [
    "github-actions",
    "git-submodules"
  ],
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "github-actions",
        "git-submodules"
      ],
      "labels": [
        "dependency:actions"
      ],
      "automerge": true,
      "semanticCommits": "enabled",
      "semanticCommitType": "chore",
      "semanticCommitScope": "ci",
      "assignees": [
        "samtrion"
      ]
    }
  ]
}
